<UserControl x:Class="WpfApp.Controls.Numeric"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:WpfApp.Controls"
             mc:Ignorable="d"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             d:DesignHeight="30" d:DesignWidth="150" Height="30">
    
    <TextBox Height="{Binding Height}" Width="{Binding Width}" x:Name="TextBox"
             MouseWheel="TextBox_MouseWheel"
             PreviewTextInput="TextBox_PreviewTextInput"
             TextInput="TextBox_TextInput"
             LostFocus="TextBox_LostFocus"/>
    
</UserControl>
